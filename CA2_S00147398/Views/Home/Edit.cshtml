@model CA2_S00147398.Models.Movies


<div class="container">
    <div class="panel panel-info">
        <div class="panel-heading">
            Edit
        </div>
    </div>
    <div class="panel-body">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Movies</legend>
            @Html.HiddenFor(model => model.MovieId)
            <div class="editor-label">
                @Html.LabelFor(model => model.MovieName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.MovieName)
                @Html.ValidationMessageFor(model => model.MovieName)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Description)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
            <p>
                <input type="submit" class="btn btn-primary btn-xs" value="Save" />
            </p>
        </fieldset>
    }
    </div>
    <div>
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-success" })
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
